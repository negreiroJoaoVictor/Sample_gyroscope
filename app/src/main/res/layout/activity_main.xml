<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_gyro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="GYROSCOPE"
        android:textSize="30sp"

        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_gyro"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/Text_x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""

            />

        <TextView
            android:id="@+id/Text_y"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Text_x"
            android:layout_marginTop="20dp"
            android:text="" />

        <TextView
            android:id="@+id/Text_z"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Text_y"
            android:layout_marginTop="20dp"
            android:text="" />

        <TextView
            android:id="@+id/Text_angular_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Text_z"
            android:layout_marginTop="20dp"

            />


    </LinearLayout>


</RelativeLayout>